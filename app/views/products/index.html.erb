<div class="page-header">
  <h1>products <small>from the 90's</small></h1>
</div>

<%= link_to "Create a new product", "/products/new" %>
<br>
<br>
<% @products.each do |product| %>
    <div class="row">
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src=<%=product.image%>>
          <div class="caption">
            <h3><%= link_to product.name, "/products/#{product.id}"%>: <small>$<%=product.price%></small></h3>
            <p><%=product.description%></p>
            <h6>Made by: <%=product.brand%></h6>
            <p><a href="/products/<%=product.id%>" class="btn btn-primary" role="button">
            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
            </a></p>
          </div>
        </div>
      </div>
    </div>
<% end %>
</div>
