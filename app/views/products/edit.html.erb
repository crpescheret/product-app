  <h1>Edit a product:</h1>

  <%= form_tag "/products/#{@product.id}", {method: :patch} do %>
    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, @product.name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :price %>
      <%= text_field_tag :price, @product.price, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= label_tag :description %>
      <%= text_field_tag :description, @product.description, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= label_tag :brand %>
      <%= text_field_tag :brand, @product.brand, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= label_tag :image %>
      <%= text_field_tag :image, @product.image, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :quantity %>
      <%= text_field_tag :quantity, @product.quantity, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag "Update", class: "btn btn-default" %>
    </div>
  <% end %>