<div class = "form">
  <h1>Add a new product:</h1>

  <%= form_tag '/products', {method: :post} do %>
    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, "", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :price %>
      <%= text_field_tag :price, "", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :description %>
      <%= text_field_tag :description, "", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :brand %>
      <%= text_field_tag :brand, "", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :image %>
      <%= text_field_tag :image, "", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :quantity %>
      <%= text_field_tag :quantity, "", class: "form-control" %>
    </div>
    <div>
      <%= submit_tag "Create", class: "btn btn-default" %>
    </div>
  <% end %>
</div>